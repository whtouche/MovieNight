<h3>Enter the Zip Code and the Date</h3>

<%= form_for @query do |f| %>
  <div class="field">
    <%= f.label :zip, 'Zip Code' %><br>
    <%= f.text_field :zip %>
  </div>
    <div class="field">
    <%= f.label :date, 'Date' %><br>
    <%= f.text_field :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
